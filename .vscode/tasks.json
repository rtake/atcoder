{
    "version": "2.0.0",
    "tasks": [
      {
        "type": "shell",
        "label": "C/C++: g++-9 compile file",
        "command": "/usr/bin/g++-7",
        "args": [
          "-std=gnu++17",
          "-ggdb",
          "-I/usr/local/include/ac-library",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "problemMatcher": [
          "$gcc"
        ],
        "group": {
          "kind": "build",
          "isDefault": true
        }
      },
      {
        "type": "cppbuild",
        "label": "C/C++: g++ アクティブなファイルのビルド",
        "command": "/usr/bin/g++",
        "args": [
          "-fdiagnostics-color=always",
          "-g",
          "${file}",
          "-o",
          "${fileDirname}/${fileBasenameNoExtension}"
        ],
        "options": {
          "cwd": "${fileDirname}"
        },
        "problemMatcher": [
          "$gcc"
        ],
        "group": "build",
        "detail": "コンパイラ: /usr/bin/g++"
      }
    ]
  }